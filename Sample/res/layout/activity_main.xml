<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonSimpleDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Direction" />

        <Button
            android:id="@+id/buttonDirection01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Direction Sample 1" />

        <Button
            android:id="@+id/buttonDirection02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Direction Sample 2" />

        <Button
            android:id="@+id/buttonDirection03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Direction Sample 3" />

        <Button
            android:id="@+id/buttonPlace01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Place Sample 1" />

        <Button
            android:id="@+id/buttonPlace02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Place Sample 2" />

        <Button
            android:id="@+id/buttonPlace03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Place Sample 3" />
    </LinearLayout>
    
</LinearLayout>